@model MvcBlog.Models.Comentario

@using (Html.BeginForm("Create", "Comentario", FormMethod.Post, new { Id = "createCommentForm" }))
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Comentario</legend>

        @Html.HiddenFor(model => model.IdPost)

        <div class="editor-label">
            @Html.LabelFor(model => model.Autor)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Autor)
            @Html.ValidationMessageFor(model => model.Autor)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Contenido)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Contenido)
            @Html.ValidationMessageFor(model => model.Contenido)
        </div>
        <p>
            <input id="submitComment" type="button" value="Create" />
        </p>
    </fieldset>
}
