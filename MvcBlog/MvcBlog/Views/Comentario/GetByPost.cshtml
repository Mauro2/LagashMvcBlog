@model IEnumerable<MvcBlog.Models.Comentario>

@{
    ViewBag.Title = "Comentarios";
}

<h2>Comentarios de @ViewBag.TituloComentario</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<p></p>

<table>
    <tr>
        <th style="display:none;">
            IdComentario
        </th>
        <th>
            Autor
        </th>
        <th>
            Contenido
        </th>
        <th style="display:none;">
            IdPost
        </th>
        <th>
            Fecha
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        @Html.HiddenFor(modelItem => item.IdComentario)
        @Html.HiddenFor(modelItem => item.IdPost)
        <td>
            @Html.DisplayFor(modelItem => item.Autor)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Contenido)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Fecha)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.IdComentario }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.IdComentario})
        </td>
    </tr>
}
</table>
@Html.Partial("Create", new MvcBlog.Models.Comentario())

<table style="display:none;">
    <tr id="commentTemplate">
        <td class="mvcAutor">
        </td>
        <td class="mvcContenido">
        </td>
        <td class="mvcFecha">
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = "XXX" }, new { @class = "mvcEdit" }) |
            @Html.ActionLink("Delete", "Delete", new { id = "XXX" }, new { @class = "mvcDelete" })
        </td>
    </tr>
</table>
