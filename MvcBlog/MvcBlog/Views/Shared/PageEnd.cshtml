<script type="text/javascript">
    $(document).ready(function () {
        $("#createPost").live('click', function () {
            $.ajax({
                type: 'POST',
                url: '@Url.Action("Create", "Post")',
                data: $("#createPostForm").serialize(),
                success: function (result) {
                    if (result.Result) {
                        window.location = result.Url;
                    }
                }
            });
        });
    });
</script>
